<resources>
    <!-- Base application theme. -->

    <!-- Base application theme. -->
    <style name="Theme.myApp" parent="Theme.Material3.DayNight">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/Level1</item>

    </style>
    <style name="ToolbarStyle" parent="Widget.Material3.Toolbar">
        <!-- Customize the color of the menu items -->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DrawerTheme" parent="Theme.Material3.DayNight">
        <item name="android:textSize">15sp</item> <!-- menu item text size-->
        <item name="listPreferredItemHeightSmall">40dp</item><!-- menu item height-->
    </style>

</resources>